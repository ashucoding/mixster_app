<% if !user_signed_in? %>
<div class="jumbotron">
<h1>Your Favorite Drinks Reviewed</h1>
<p>Track your favorite drinks with Mixster!</p>
<p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn  btn-primary btn-lg" %></p>
</div>

<%end%>

<div class="row"></div>
  <% @drinks.each do |drink| %>
    <div class="col-xs-6 col-md-3">
     <div class="thumbnail">
       <%= link_to (image_tag drink.image.url(:medium), class: 'image'), drink %>
      </div>
    </div>
  <%end%>



